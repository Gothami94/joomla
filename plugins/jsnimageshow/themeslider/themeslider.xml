<?xml version="1.0" encoding="utf-8"?>
<extension version="3.0" type="plugin" group="jsnimageshow"
	method="upgrade">
	<name>Theme Slider</name>
	<version>1.2.6</version>
	<creationDate>11/07/2016</creationDate>
	<copyright>Copyright (c) 2008 - 2013 - JoomlaShine.com</copyright>
	<license>GNU/GPL v2 http://www.gnu.org/licenses/gpl-2.0.html</license>
	<author>JoomlaShine.com</author>
	<authorEmail>admin@joomlashine.com</authorEmail>
	<authorUrl>http://www.joomlashine.com</authorUrl>
	<description>JSN IMAGESHOW SHOWCASE THEME SLIDER PLUGIN</description>
	<files>
		<filename plugin="themeslider">themeslider.php</filename>
		<filename plugin="themeslider">install.mysql.sql</filename>
		<filename plugin="themeslider">uninstall.mysql.sql</filename>
		<filename plugin="themeslider">install.sqlsrv.sql</filename>
		<filename plugin="themeslider">uninstall.sqlsrv.sql</filename>	
		<filename plugin="themeslider">install.class.php</filename>			
		<folder>assets</folder>
		<folder>classes</folder>
		<folder>helper</folder>
		<folder>languages</folder>
		<folder>models</folder>
		<folder>tables</folder>
		<folder>views</folder>
		<folder>sql</folder>		
	</files>
	<install>
		<sql>
			<file charset="utf8" driver="mysql">install.mysql.sql</file>
			<file charset="utf8" driver="sqlsrv">install.sqlsrv.sql</file>
		</sql>
	</install>
	<uninstall>
		<sql>
			<file charset="utf8" driver="mysql">uninstall.mysql.sql</file>
			<file charset="utf8" driver="sqlsrv">uninstall.sqlsrv.sql</file>
		</sql>
	</uninstall>
	<scriptfile>install.class.php</scriptfile>
	<update>
		<schemas>
			<schemapath type="mysql">sql/updates/mysql</schemapath>
			<schemapath type="sqlsrv">sql/updates/sqlsrv</schemapath>
		</schemas>
	</update>	
	<languages>
		<language tag="da-DK">languages/da-DK.plg_jsnimageshow_themeslider.ini</language>
		<language tag="de-DE">languages/de-DE.plg_jsnimageshow_themeslider.ini</language>
		<language tag="en-GB">languages/en-GB.plg_jsnimageshow_themeslider.ini</language>
		<language tag="fr-FR">languages/fr-FR.plg_jsnimageshow_themeslider.ini</language>
		<language tag="it-IT">languages/it-IT.plg_jsnimageshow_themeslider.ini</language>
		<language tag="ja-JP">languages/ja-JP.plg_jsnimageshow_themeslider.ini</language>
		<language tag="nl-NL">languages/nl-NL.plg_jsnimageshow_themeslider.ini</language>
		<language tag="pl-PL">languages/pl-PL.plg_jsnimageshow_themeslider.ini</language>
		<language tag="pt-BR">languages/pt-BR.plg_jsnimageshow_themeslider.ini</language>
		<language tag="pt-PT">languages/pt-PT.plg_jsnimageshow_themeslider.ini</language>
		<language tag="ru-RU">languages/ru-RU.plg_jsnimageshow_themeslider.ini</language>
		<language tag="tr-TR">languages/tr-TR.plg_jsnimageshow_themeslider.ini</language>
	</languages>
</extension>